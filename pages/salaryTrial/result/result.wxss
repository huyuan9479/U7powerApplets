} */

.result .detail .more{
  padding:10rpx 0 28rpx 0;
  font-size:26rpx;
  color:#4B6598;
  text-align: center; 
}
.result .detail .more image{
  width:36rpx;
  height:36rpx;
  vertical-align:-8rpx;
}
.result .btn{
  width:100%;
  height:70rpx;
  padding:20rpx 0;
  background:rgba(0,0,0,0.7);
  /* position:fixed;
  bottom:0; */
  display: flex;
  flex-direction: row;
  justify-content: space-around;
