.pie .bg{
  width:100%;
  height:20rpx;
  background:#f5f5f5;
}
.pie .perTax{
  width:100%;
  height:640rpx;
}
.pie .detail{
  padding-bottom:68rpx;
}
.pie .detail .title,.pie .detail .cont{
  width:80%;
  margin:0 auto;
  text-align: center;
  display: flex;
}
.pie .detail .title{
  font-size:30rpx;
  color:#909399;
}
.pie .detail .cont{
  font-size:28rpx;
  color:#303133;
  margin-top:18rpx;
  position:relative;
}
.pie .detail .title view,.pie .detail .cont view{
  flex:1;
}
.pie .detail .cont text{
  position:absolute;
  width:24rpx;
  height:24rpx;
  top:8rpx;
  left:-16rpx;
}
.pie .contact{
  width:100%;
  height:144rpx;
