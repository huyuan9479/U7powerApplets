/* pages/selectCity/selectCity.wxss */
.search{
  padding:20rpx 30rpx;
  background:#EBEBEE;
  height:72rpx;
  position:relative;
}
.search input{
  float:left;
  box-sizing:border-box;
  padding-left:64rpx;
  padding-right:68rpx;
  /* width:596rpx; */
  height:72rpx;
  line-height:72rpx;
  background:#fff;
  border-radius: 8rpx;
}
.search .placeholderStyle{
  font-size:32rpx;
  color:#C0C4CC;
}
.search image{
  width:28rpx;
  height:28rpx;
  position:absolute;
  left:50rpx;
  top:42rpx;
}
.search text{
  float:right;
  font-size:32rpx;
  color:#4F77F0;
  line-height:72rpx;
}
.search icon{
  position:absolute;
  top:42rpx;
  left:568rpx;
}
.mark{
  width:100%;
  height:calc(100% - 112rpx);
  background:rgba(0,0,0,0.5);
  position:fixed;
  top:112rpx;
  left:0;
  z-index: 5;
}
.searchList{
  background:#fff;
  font-size:34rpx;
  color:#303133;
}
.searchList .list{
  padding-left:30rpx;
  line-height:88rpx;
  border-bottom:1rpx solid #E6E6E6;
}
.searchList .nodata{
  margin:160rpx auto;
  font-size:34rpx;
  color:#C0C4CC;
  text-align: center;
}
.garyBg{
  background:#F5F5F9;
  padding:14rpx 30rpx 20rpx 30rpx;
}
.garyBg .tit{
  font-size:24rpx;
  color:#909399;
  margin-top:14rpx;
  margin-bottom:24rpx;
}
.garyBg .city{
  display:inline-block;
  width:180rpx;
  padding:0 10rpx;
  line-height:70rpx;
  text-align: center;
  font-size:28rpx;
  color:#303133;
  background:#fff;
  border:1rpx solid #DDDDDD;
  border-radius: 4rpx;
  margin-right:20rpx;
  margin-bottom:20rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.initial{
  background:#fff;
}
.initial .classify{
  line-height:60rpx;
  padding-left:30rpx;
  background:#F5F5F9;
  font-size:26rpx;
  color:#909399;
  border-top:1rpx solid #E6E6E6;
  border-bottom:1rpx solid #E6E6E6;
}
.initial .downtown{
  margin-left:30rpx;
  line-height:88rpx;
  font-size:34rpx;
  color:#303133;
  border-bottom:1rpx solid #E6E6E6;
}
.initial .downtown:last-child{
  border:none;
}
.btn{
  font-size:22rpx;
  color:#4F77F0;
  position:fixed;
  right:10rpx;
  top:120rpx;
  z-index:2;
  text-align: center;
  line-height:36rpx;
}