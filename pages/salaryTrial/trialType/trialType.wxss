/* pages/salaryTrial/trialType/trialType.wxss */
.trialType{
  padding:0 40rpx;
  height:100%;
}
.trialType .location{
  box-sizing: border-box;
  padding:48rpx 40rpx 34rpx 40rpx;
  position:relative;
}
.trialType .location image{
  width:34rpx;
  height:34rpx;
  margin-right:10rpx;
}
.trialType .location text{
  font-size:34rpx;
  font-weight: bold;
  color:#303133;
}
.trialType .location .selet{
  font-size:28rpx;
  color:#303133;
  font-weight:bold;
  padding-right:48rpx;
  position:absolute;
  right:40rpx;
  top:56rpx;
  z-index: 5;
}
.trialType .location .selet::after{
  content:"";
  height:16rpx;
  width:16rpx;
  border-right:4rpx solid #303133;
  border-top: 4rpx solid #303133;
  border-left: 4rpx solid transparent;
  border-bottom: 4rpx solid transparent;
  transform: rotate(135deg);

  position:absolute;
  right:6rpx;
  top:0rpx;

}
.trialType .nodata{
  width:100%;
  font-size:34rpx;
  color:#C0C4CC;
  text-align: center;
  margin-top:200rpx;
}
.trialType .project .item{
  box-sizing: border-box;
  width:100%;
  height:140rpx;
  border:1rpx solid #EEEEEE;
  border-radius: 6rpx;
  padding-left:40rpx;
  padding-right:48rpx;
  margin-bottom:24rpx;
}
.trialType .project .item .name{
  float:left;
  line-height: 140rpx;
  font-size:34rpx;
  color:#303133;
}
.trialType .project .item .icon{
  float:right;
  width:46rpx;
  height:140rpx;
  line-height: 140rpx;
  position:relative;
}
.trialType .project .item .icon icon{
  margin-top:26rpx;
}
.trialType .project .item .icon .circle{
  width:44rpx;
  height:44rpx;
  border:1rpx solid #C9C9C9;
  border-radius: 50%;
  position:absolute;
  top:48rpx;
  left:-2rpx;
}
.trialType .nextBtn{
  width:296rpx;
  line-height:88rpx;
  font-size:34rpx;
  color:#FFFFFD;
  text-align: center;
  border-radius: 44rpx;
  background:linear-gradient(#8F9CFF, #496DEC);
  box-shadow:0 2rpx 20rpx 0 rgba(52,47,255,0.5);
  position:fixed;
  left:50%;
  margin-left:-148rpx;
  bottom:90rpx;
}